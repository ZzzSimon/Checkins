<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.b140414.njupt.checkins.LoginActivity"
    android:background="@drawable/background_login">
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="登录"
        android:id="@+id/button_login"
        android:textSize="27dp"
        android:background="@drawable/circle"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="注册"
        android:id="@+id/button_re"
        android:textSize="20dp"
        android:textColor="@color/colorYellow"
        android:background="#00000000"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/relativeLayout" />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/logo"/>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/relativeLayout"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号:"
            android:id="@+id/textView_zh"
            android:textSize="30dp"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="20dp"
            android:layout_alignBottom="@+id/account_et"
            android:layout_toStartOf="@+id/password_et" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码:"
            android:id="@+id/textView_mi"
            android:textSize="30dp"
            android:textColor="@color/colorBlack"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="45dp"
            android:layout_marginLeft="20dp" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/account_et"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="30dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView_zh" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/password_et"
            android:textColor="@color/colorWhite"
            android:layout_alignBottom="@+id/textView_mi"
            android:layout_toEndOf="@+id/textView_mi" />
    </RelativeLayout>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:id="@+id/imageView2"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:src="@drawable/duidui"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="签到"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginBottom="31dp"
        android:textSize="20dp"
        android:textColor="@color/colorBlack"/>
</RelativeLayout>
