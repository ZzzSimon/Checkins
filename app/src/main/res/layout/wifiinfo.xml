<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <TextView android:id="@+id/SSID"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textColor="#FFFFFF00"
        android:textSize="30px"
        android:text="null"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginStart="9dp" />

    <TextView android:id="@+id/BSSID"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textColor="#FF00FFFF"
        android:textSize="20px"
        android:text="null"
        android:layout_below="@+id/SSID"
        android:layout_alignStart="@+id/SSID" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WIFI:"
        android:id="@+id/textView2"
        android:textSize="10dp"
        android:textColor="@color/abc_primary_text_disable_only_material_dark"
        android:layout_alignBaseline="@+id/SSID"
        android:layout_alignBottom="@+id/SSID"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAC:"
        android:id="@+id/textView5"
        android:textSize="10dp"
        android:textColor="@color/abc_primary_text_disable_only_material_dark"
        android:layout_alignBaseline="@+id/BSSID"
        android:layout_alignBottom="@+id/BSSID"
        android:layout_alignParentStart="true" />

</RelativeLayout>
